{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SirTrav A2A Studio API Response Contracts",
    "version": "1.2.0",
    "description": "JSON Schema contracts for Antigravity contract tests (MG-006). Covers render-progress, submit-evaluation, and publish-x endpoints.",
    "definitions": {
        "RenderProgressResponse": {
            "description": "GET /.netlify/functions/render-progress response",
            "type": "object",
            "properties": {
                "ok": {
                    "type": "boolean",
                    "description": "Whether the request succeeded"
                },
                "renderId": {
                    "type": "string",
                    "description": "Remotion Lambda render ID"
                },
                "progress": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Overall progress (0-1)"
                },
                "phase": {
                    "type": "string",
                    "enum": [
                        "rendering",
                        "combining",
                        "encoding",
                        "done",
                        "error",
                        "pending"
                    ],
                    "description": "Current render phase"
                },
                "framesRendered": {
                    "type": ["number", "null"],
                    "description": "Number of frames rendered so far"
                },
                "totalFrames": {
                    "type": ["number", "null"],
                    "description": "Total frames to render"
                },
                "done": {
                    "type": "boolean",
                    "description": "Whether the render is complete"
                },
                "outputFile": {
                    "type": ["string", "null"],
                    "description": "URL of the completed video (null until done)"
                },
                "error": {
                    "type": ["string", "null"],
                    "description": "Error message if phase is error"
                },
                "fallback": {
                    "type": "boolean",
                    "description": "Whether fallback/placeholder mode was used"
                },
                "projectId": {
                    "type": "string",
                    "description": "Project ID (present when queried by projectId+runId)"
                },
                "runId": {
                    "type": "string",
                    "description": "Run ID (present when queried by projectId+runId)"
                }
            },
            "required": [
                "ok",
                "progress",
                "done"
            ],
            "if": {
                "properties": { "ok": { "const": true } }
            },
            "then": {
                "required": ["ok", "renderId", "progress", "done"]
            }
        },
        "RenderProgressErrorResponse": {
            "description": "Error response from render-progress (400/404/500)",
            "type": "object",
            "properties": {
                "ok": {
                    "type": "boolean",
                    "const": false
                },
                "error": {
                    "type": "string"
                },
                "renderId": {
                    "type": "string"
                }
            },
            "required": ["ok", "error"]
        },
        "SubmitEvaluationRequest": {
            "description": "POST /.netlify/functions/submit-evaluation request body",
            "type": "object",
            "properties": {
                "projectId": {
                    "type": "string",
                    "description": "Project identifier"
                },
                "runId": {
                    "type": "string",
                    "description": "Run identifier for tracing"
                },
                "rating": {
                    "type": "string",
                    "enum": ["good", "bad"],
                    "description": "User feedback rating"
                },
                "comments": {
                    "type": "string",
                    "description": "Optional user feedback text"
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "platform": { "type": "string" },
                        "theme": { "type": "string" },
                        "style": { "type": "string" }
                    },
                    "description": "Optional context about the evaluated content"
                }
            },
            "required": ["projectId", "rating"]
        },
        "SubmitEvaluationResponse": {
            "description": "POST /.netlify/functions/submit-evaluation success response",
            "type": "object",
            "properties": {
                "success": {
                    "type": "boolean",
                    "const": true
                }
            },
            "required": ["success"]
        },
        "SubmitEvaluationErrorResponse": {
            "description": "POST /.netlify/functions/submit-evaluation error response",
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            },
            "required": ["error"]
        },
        "EvaluationStoredEntry": {
            "description": "Shape of the evaluation entry stored in Blobs (evals store). Used by Antigravity for data verification.",
            "type": "object",
            "properties": {
                "projectId": {
                    "type": "string"
                },
                "runId": {
                    "type": "string",
                    "default": "unknown"
                },
                "rating": {
                    "type": "string",
                    "enum": ["good", "bad"]
                },
                "comments": {
                    "type": ["string", "null"]
                },
                "metadata": {
                    "type": ["object", "null"]
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "buildId": {
                    "type": "string",
                    "description": "Netlify BUILD_ID for traceability"
                }
            },
            "required": ["projectId", "runId", "rating", "timestamp", "buildId"]
        },
        "XPublishRequest": {
            "description": "POST /.netlify/functions/publish-x request body",
            "type": "object",
            "properties": {
                "text": {
                    "type": "string",
                    "maxLength": 280,
                    "description": "Tweet text content"
                },
                "mediaUrls": {
                    "type": "array",
                    "items": { "type": "string", "format": "uri" },
                    "description": "Optional media attachment URLs"
                },
                "userId": {
                    "type": "string",
                    "description": "Optional user identifier for attribution"
                }
            },
            "required": ["text"]
        },
        "XPublishSuccessResponse": {
            "description": "POST /.netlify/functions/publish-x success response",
            "type": "object",
            "properties": {
                "success": { "type": "boolean", "const": true },
                "platform": { "type": "string", "const": "x" },
                "tweetId": { "type": "string", "description": "Twitter API tweet ID" },
                "url": { "type": "string", "description": "Direct link to tweet" },
                "invoice": {
                    "type": "object",
                    "properties": {
                        "endpoint": { "type": "string", "const": "tweets" },
                        "cost": { "type": "number", "description": "Raw API cost" },
                        "total_due": { "type": "number", "description": "Cost + 20% markup" },
                        "timestamp": { "type": "string", "format": "date-time" }
                    },
                    "required": ["endpoint", "cost", "total_due", "timestamp"]
                }
            },
            "required": ["success", "platform", "tweetId", "invoice"]
        },
        "XPublishDisabledResponse": {
            "description": "POST /.netlify/functions/publish-x when keys missing (No Fake Success)",
            "type": "object",
            "properties": {
                "success": { "type": "boolean", "const": false },
                "disabled": { "type": "boolean", "const": true },
                "platform": { "type": "string", "const": "x" },
                "error": { "type": "string" },
                "note": { "type": "string" }
            },
            "required": ["success", "disabled", "platform", "error"]
        },
        "XPublishErrorResponse": {
            "description": "POST /.netlify/functions/publish-x when API call fails",
            "type": "object",
            "properties": {
                "success": { "type": "boolean", "const": false },
                "error": { "type": "string" }
            },
            "required": ["success", "error"]
        }
    }
}
